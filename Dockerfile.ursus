# Dockerfile.ursus

FROM python:3.11-slim

WORKDIR /app

COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

COPY . .

# The blog content folder is expected to be mounted at /app/frontend/content/blog
VOLUME ["/app/frontend/content/blog"]

# If your entrypoint differs, change it accordingly
CMD ["python", "-m", "ursus"]
